{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "Just a simple yet useful pomodoro timer.",
  "main": "index.js",
  "author": "Daniel Van Cuylenburg",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier \"**pages/**/*.+(js|json|jsx)\"",
    "prettier:format": "yarn prettier --write",
    "prettier:check": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel prettier:check lint build",
    "jestconf": "jest --watchAll --config tests/configs/jest.config.js",
    "jest": "jest --config tests/configs/jest.config.js",
    "jest:watch": "yarn jestconf",
    "jest:watch:cov": "yarn jestconf --collectCoverage ",
    "cypress:open": "cypress open --config-file tests/configs/cypress.json",
    "cypress:open:firefox": "cypress open --browser firefox --config-file tests/configs/cypress.json",
    "cypress:open:all": "start-server-and-test dev http://localhost:8000 cypress:open --config-file tests/configs/cypress.json",
    "cypress:run": "cypress run --config-file tests/configs/cypress.json",
    "cypress:run:all": "start-server-and-test dev http://localhost:8000 cypress:run --config-file tests/configs/cypress.json",
    "cypress:run:all:firefox": "start-server-and-test dev http://localhost:8000 cypress:open:firefox --config-file tests/configs/cypress.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn prettier:check && yarn jest"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.1.1",
    "@emotion/styled": "^10.0.27",
    "babel-eslint": "^10.1.0",
    "next": "^10.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "babel-jest": "^26.6.2",
    "cypress": "^5.5.0",
    "cypress-axe": "^0.10.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^17.0.1",
    "start-server-and-test": "^1.11.5"
  }
}
